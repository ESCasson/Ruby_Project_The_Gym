<h3>Add a member</h3>
<form class="" action="/members" method="post">
  <label for="first-name">First Name</label>
  <input type="text" id="first-name" name="first_name">

  <label for="last-name">Last Name</label>
  <input type="text" id="last-name" name="last_name">

  <label for="membership">Membership Level &nbsp &nbsp</label>

  <input type="radio" name="premier_member" value="t">Premier
  <input type="radio" name="premier_member" value="f">Standard

  <input class="btn" type="submit" value="Add new member">


</form>
<br>
<hr/>


<h3>All the members</h3>
<p> <% for member in @members.reverse %>
<p><%=member.full_name%>&nbsp &nbsp
  <%if member.premier_member == 't'%>
  <%="Premier Member"%>
  <%else%>
  <%="Standard Member"%>
  <% end %>
<p><form action="/members/<%= member.id %>/edit" method="get">
        <button class="btn" type="submit">Edit Member</button>
     </form></p>
<p><form method="post" action="members/<%= member.id %>/delete">
  <input class="btn" type="submit" value="Delete Member"/>
</form></p>

<hr/>
<%end%>
</p>
